<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Interfaces.Portada">

    <TextView
        android:id="@+id/tvTituloSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a SwitchHub"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btEmpezarSplash"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/btEmpezarSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empezar"
        android:textSize="18sp"
        android:padding="16dp"
        android:backgroundTint="#E60012"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvTituloSplash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>