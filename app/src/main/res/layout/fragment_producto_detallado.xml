<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".Interfaces.ProductoDetallado">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="57dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="150dp">

        <TextView
            android:id="@+id/tvPedidos"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="#FF4444"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ibflechaProductoDetallado"
            android:layout_width="34dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:scaleX="-1"
            android:src="@drawable/flecha"
            app:tint="@color/white" />

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/fondoswitch" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="316dp"
                    android:layout_marginHorizontal="60dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="50dp">

                    <ImageView
                        android:id="@+id/ivProductoDetallado"
                        android:layout_width="247dp"
                        android:layout_height="314dp"
                        android:layout_gravity="center"
                        tools:src="@tools:sample/avatars" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginVertical="10dp"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="350dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tituloProductoDetallado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="30dp"
                            android:gravity="center_horizontal"
                            android:text="TextView"
                            android:textColor="#FF2B2B"
                            android:textSize="38sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/descripcionProductoDetallado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="25dp"
                            android:layout_marginBottom="25dp"
                            android:text="TextView"
                            android:textAlignment="center"
                            android:textSize="20sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="15dp">

                    <TextView
                        android:id="@+id/tvPrecioProductoDetallado"
                        android:layout_width="248dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textColor="@color/fui_bgTwitter"
                        android:textSize="34sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btAñadirProductoProductosDetallados"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="#FF4444"
                    android:text="Añadir al carrito"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>

    </FrameLayout>

</LinearLayout>