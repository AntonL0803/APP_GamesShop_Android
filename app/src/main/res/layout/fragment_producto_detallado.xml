<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    android:orientation="vertical"
    tools:context=".Interfaces.ProductoDetallado">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="57dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="150dp">

        <TextView
            android:id="@+id/tvCarro"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="#FF4444"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ibflechaProductoDetallado"
            android:layout_width="34dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:scaleX="-1"
            android:src="@drawable/flecha"
            app:tint="@color/white" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="271dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/ivProductoDetallado"
            android:layout_width="253dp"
            android:layout_height="239dp"
            android:layout_gravity="center"
            tools:src="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="422dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="350dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="425dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tituloProductoDetallado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:gravity="center_horizontal"
                android:text="TextView"
                android:textColor="#FF2B2B"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descripcionProductoDetallado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="10dp"
                android:text="TextView"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvPrecioProductoDetallado"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="10dp"
            android:text="TextView"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>